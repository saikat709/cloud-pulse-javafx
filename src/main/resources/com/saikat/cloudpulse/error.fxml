<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.saikat.cloudpulse.controllers.ErrorController"
            prefHeight="Infinity" prefWidth="Infinity" styleClass="container">

    <VBox alignment="CENTER"
          spacing="15"
          AnchorPane.topAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.bottomAnchor="0">
        <Label text="Error Loading Page.. " styleClass="retry-label"/>
        <Button text="Retry?" onAction="#retryButtonClick" styleClass="retry-button"/>
    </VBox>

</AnchorPane>
