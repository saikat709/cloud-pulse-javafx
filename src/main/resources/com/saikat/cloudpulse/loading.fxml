<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Arc?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.saikat.cloudpulse.controllers.LoadingController"
            fx:id="loadingIndicator" styleClass="loading-container"
            prefHeight="Infinity" prefWidth="Infinity">

        <HBox alignment="CENTER" spacing="20" styleClass="hbox" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <Arc fx:id="spinnerArc" length="225" radiusX="13" radiusY="13" startAngle="45" fill="#00000000" stroke="aliceblue" strokeWidth="4" />
            <Label alignment="CENTER" text="Loading..." textFill="aliceblue" styleClass="loading-label"/>
        </HBox>
</AnchorPane>
